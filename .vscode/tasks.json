{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "update",
			"args": ["update"]
		},
		{
			"taskName": "test",
			"args": ["run", "test"]
		},
		{
			"taskName": "clean",
			"args":["run", "clean"]
		},
		{
			"taskName": "bundle",
			"args":["run", "bundle"]
		},
		{
			"taskName": "build-all",
			"args":["run", "build"]
		},
		{
			"taskName": "format",
			"args":["run", "format"]
		}
	]
}